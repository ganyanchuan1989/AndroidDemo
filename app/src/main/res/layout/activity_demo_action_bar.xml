<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activitydemo.DemoActionBarActivity">
    <Button
        android:text="显示actionbar"
        android:id="@+id/btn_action_bar_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
    <Button
        android:text="隐藏actionbar"
        android:id="@+id/btn_action_bar_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>

    <Button
        android:text="返回"
        android:id="@+id/btn_action_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>